<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- 底部阴影层 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0A000000" />
            <corners android:radius="12dp" />
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
        </shape>
    </item>
    
    <!-- 主背景层（禁用时颜色较淡） -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:endColor="#80B2EBF2"
                android:startColor="#80B2EBF2"
                android:type="linear" />
            <corners android:radius="12dp" />
            <stroke
                android:width="1dp"
                android:color="#20FFFFFF" />
        </shape>
    </item>
</layer-list> 